<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Required permissions for speech recognition -->
	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission android:name="android.permission.INTERNET" />

	<!-- Optional: for better speech recognition -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application android:allowBackup="true" android:icon="@mipmap/appicon" android:supportsRtl="true">
	</application>

	<!-- Declare speech recognition feature -->
	<uses-feature android:name="android.hardware.microphone" android:required="false" />

</manifest>