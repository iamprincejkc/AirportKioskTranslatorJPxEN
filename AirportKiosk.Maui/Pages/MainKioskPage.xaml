<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AirportKiosk.Maui.Pages.MainKioskPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AirportKiosk.Maui.ViewModels"
             x:DataType="vm:MainKioskViewModel"
             Title="Airport Kiosk"
             BackgroundColor="#F0F8FF">

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,30">
                <Label Text="{Binding WelcomeMessage}"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center" />

                <Label Text="{Binding CurrentTime}"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="#3498DB"
                       HorizontalOptions="Center" />

                <Label Text="{Binding CurrentDate}"
                       FontSize="18"
                       TextColor="#7F8C8D"
                       HorizontalOptions="Center" />
            </StackLayout>

            <!-- Airport Image/Logo Placeholder -->
            <Frame Grid.Row="1" 
                   BackgroundColor="#ECF0F1"
                   BorderColor="#BDC3C7"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,0,0,30">
                <Label Text="✈️ Airport Information Center"
                       FontSize="24"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center" />
            </Frame>

            <!-- Main Menu Grid -->
            <Grid Grid.Row="2" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Translation Service -->
                <Button Grid.Row="0" Grid.Column="0"
                        Text="🌐&#x0a;Translation&#x0a;Services"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="120"
                        Command="{Binding NavigateToTranslationCommand}" />

                <!-- Flight Information -->
                <Button Grid.Row="0" Grid.Column="1"
                        Text="✈️&#x0a;Flight&#x0a;Information"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="#E74C3C"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="120"
                        Command="{Binding ShowFlightInfoCommand}" />

                <!-- Airport Map -->
                <Button Grid.Row="1" Grid.Column="0"
                        Text="🗺️&#x0a;Airport&#x0a;Directions"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="#2ECC71"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="120"
                        Command="{Binding ShowDirectionsCommand}" />

                <!-- Services -->
                <Button Grid.Row="1" Grid.Column="1"
                        Text="🏪&#x0a;Airport&#x0a;Services"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="#F39C12"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="120"
                        Command="{Binding ShowServicesCommand}" />

                <!-- Emergency/Assistance -->
                <Button Grid.Row="2" Grid.ColumnSpan="2"
                        Text="🆘 Call for Assistance"
                        FontSize="20"
                        FontAttributes="Bold"
                        BackgroundColor="#E67E22"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="80"
                        Command="{Binding CallAssistanceCommand}" />
            </Grid>

            <!-- Footer -->
            <StackLayout Grid.Row="3" Margin="0,30,0,20">
                <Label Text="Need help? Touch any button or ask airport staff"
                       FontSize="14"
                       TextColor="#95A5A6"
                       HorizontalOptions="Center" />
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>