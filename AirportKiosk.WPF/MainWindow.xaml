<Window x:Class="AirportKiosk.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Airport Translation Kiosk" 
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#f0f2f5">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="SpeakButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66bb6a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RecordingButtonStyle" TargetType="Button" BasedOn="{StaticResource SpeakButtonStyle}">
            <Setter Property="Background" Value="#f44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ef5350"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Text Styles -->
        <Style x:Key="LanguageTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,30,0,20"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style x:Key="TranslationTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="40,30"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="LineHeight" Value="55"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Language Selection Bar -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Select Language / 言語を選択 / Seleziona lingua / 언어 선택:" 
                          FontSize="24" FontWeight="Bold" Foreground="White" 
                          VerticalAlignment="Center" Margin="0,0,30,0"/>

                <Button x:Name="ItalianButton" Content="🇮🇹 Italiano" 
                       Style="{StaticResource SpeakButtonStyle}" Background="#27ae60"
                       Click="ItalianButton_Click" Margin="10,5"/>

                <Button x:Name="JapaneseButton" Content="🇯🇵 日本語" 
                       Style="{StaticResource SpeakButtonStyle}" Background="#e74c3c"
                       Click="JapaneseButton_Click" Margin="10,5"/>

                <Button x:Name="KoreanButton" Content="🇰🇷 한국어" 
                       Style="{StaticResource SpeakButtonStyle}" Background="#3498db"
                       Click="KoreanButton_Click" Margin="10,5"/>
            </StackPanel>
        </Border>

        <!-- English Section (Top Row) -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="20,20,20,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Direction="315" Color="Black" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- English Title -->
                <TextBlock Grid.Row="0" 
                          x:Name="EnglishTitle"
                          Text="ENGLISH" 
                          Style="{StaticResource LanguageTitleStyle}"
                          Foreground="#1976d2"/>

                <!-- English Text Display -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="EnglishTextBlock"
                              Style="{StaticResource TranslationTextStyle}"
                              Text="Select a language above, then tap the button below to speak in English"/>
                </ScrollViewer>

                <!-- English Controls -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30">

                    <Button x:Name="EnglishSpeakButton"
                           Content="🎤 TAP TO SPEAK ENGLISH"
                           Style="{StaticResource SpeakButtonStyle}"
                           FontSize="28"
                           Padding="30,20"
                           Click="EnglishSpeakButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Divider Line -->
        <Rectangle Grid.Row="2" 
                  Fill="#ddd" 
                  Height="2" 
                  Margin="40,0"/>

        <!-- Target Language Section (Bottom Row) -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Margin="20,10,20,20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="3" Direction="315" Color="Black" Opacity="0.2" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Target Language Title -->
                <TextBlock Grid.Row="0" 
                          x:Name="TargetLanguageTitle"
                          Text="SELECT LANGUAGE ABOVE" 
                          Style="{StaticResource LanguageTitleStyle}"
                          Foreground="#f44336"/>

                <!-- Target Language Text Display -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="TargetLanguageTextBlock"
                              Style="{StaticResource TranslationTextStyle}"
                              Text="Choose your preferred language from the options above"
                              FontFamily="Yu Gothic UI, Meiryo UI"/>
                </ScrollViewer>

                <!-- Target Language Controls -->
                <StackPanel Grid.Row="2" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30">

                    <Button x:Name="TargetLanguageSpeakButton"
                           Content="🎤 SELECT LANGUAGE FIRST"
                           Style="{StaticResource SpeakButtonStyle}"
                           FontSize="28"
                           Padding="30,20"
                           Background="#95a5a6"
                           IsEnabled="False"
                           Click="TargetLanguageSpeakButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status/Loading Overlay -->
        <Grid x:Name="StatusOverlay" 
              Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="Collapsed">
            <Border Background="White" 
                   CornerRadius="15" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Padding="40">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusText" 
                              Text="Processing..." 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#333"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" ●" 
                              FontSize="24" 
                              Foreground="#4CAF50"
                              Margin="10,0,0,0">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="10" CenterY="10"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Reset Button -->
        <Button x:Name="ResetButton"
               Content="🔄 RESET"
               Style="{StaticResource SpeakButtonStyle}"
               Background="#757575"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,30,30,0"
               Grid.Row="0"
               Click="ResetButton_Click"/>
    </Grid>
</Window>