<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirportKiosk.Maui.Pages.MainKioskPage"
             Title="Airport Kiosk">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="30">

            <!-- Header Section -->
            <StackLayout HorizontalOptions="Center" Spacing="10">
                <Label Text="{Binding CurrentTime}" 
                       FontSize="48" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <Label Text="{Binding CurrentDate}" 
                       FontSize="18"
                       HorizontalOptions="Center" />

                <Label Text="{Binding WelcomeMessage}" 
                       Style="{StaticResource Headline}"
                       HorizontalOptions="Center"
                       Margin="0,20,0,0" />
            </StackLayout>

            <!-- Service Buttons Grid -->
            <Grid RowDefinitions="Auto,Auto" 
                  ColumnDefinitions="*,*" 
                  RowSpacing="20" 
                  ColumnSpacing="20">

                <!-- Translation Service -->
                <Frame Grid.Row="0" Grid.Column="0" 
                       BackgroundColor="LightBlue" 
                       HasShadow="True"
                       CornerRadius="15">
                    <StackLayout>
                        <Label Text="🗣️" FontSize="48" HorizontalOptions="Center" />
                        <Button Text="Translation Service"
                                Command="{Binding NavigateToTranslationCommand}"
                                BackgroundColor="DodgerBlue"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="60" />
                        <Label Text="Speak or type to translate between languages"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </StackLayout>
                </Frame>

                <!-- Flight Information -->
                <Frame Grid.Row="0" Grid.Column="1" 
                       BackgroundColor="LightGreen" 
                       HasShadow="True"
                       CornerRadius="15">
                    <StackLayout>
                        <Label Text="✈️" FontSize="48" HorizontalOptions="Center" />
                        <Button Text="Flight Information"
                                Command="{Binding ShowFlightInfoCommand}"
                                BackgroundColor="Green"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="60" />
                        <Label Text="Check departures, arrivals, and gate information"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </StackLayout>
                </Frame>

                <!-- Airport Directions -->
                <Frame Grid.Row="1" Grid.Column="0" 
                       BackgroundColor="LightCoral" 
                       HasShadow="True"
                       CornerRadius="15">
                    <StackLayout>
                        <Label Text="🗺️" FontSize="48" HorizontalOptions="Center" />
                        <Button Text="Directions"
                                Command="{Binding ShowDirectionsCommand}"
                                BackgroundColor="Crimson"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="60" />
                        <Label Text="Find gates, restrooms, shops, and restaurants"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </StackLayout>
                </Frame>

                <!-- Airport Services -->
                <Frame Grid.Row="1" Grid.Column="1" 
                       BackgroundColor="LightGoldenrodYellow" 
                       HasShadow="True"
                       CornerRadius="15">
                    <StackLayout>
                        <Label Text="🛎️" FontSize="48" HorizontalOptions="Center" />
                        <Button Text="Services"
                                Command="{Binding ShowServicesCommand}"
                                BackgroundColor="Orange"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="60" />
                        <Label Text="WiFi, charging stations, and amenities"
                               FontSize="12"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Assistance Button -->
            <Button Text="🆘 Call for Assistance"
                    Command="{Binding CallAssistanceCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    HeightRequest="70"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>