{
  "ApiSettings": {
    "BaseUrl": "https://localhost:7001",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3
  },
  "AudioSettings": {
    "DefaultInputDevice": "",
    "DefaultOutputDevice": "",
    "RecordingTimeout": 30,
    "SampleRate": 44100,
    "Channels": 1,
    "BitsPerSample": 16,
    "BufferMilliseconds": 100,
    "AudioLevelThreshold": 0.01
  },
  "SpeechRecognition": {
    "ConfidenceThreshold": 0.1,
    "MaxSpeechTimeoutMs": 30000,
    "InitialSilenceTimeoutMs": 10000,
    "DefaultLanguage": "en-US",
    "SupportedLanguages": [
      "en-US",
      "ja-JP",
      "it-IT",
      "ko-KR"
    ],
    "EnableAirportPhrases": true,
    "EnableDictationGrammar": true,
    "EnableDebugging": true,
    "UseSharedRecognizer": true,
    "EnableBackgroundNoise": false
  },
  "Translation": {
    "DefaultSourceLanguage": "auto",
    "DefaultTargetLanguage": "en",
    "AutoDetectLanguage": true,
    "SessionTimeout": 1800
  },
  "UI": {
    "FullScreen": true,
    "ShowDebugInfo": false,
    "FontSizeMultiplier": 1.0,
    "AudioLevelVisualization": true,
    "AutoClearTimeout": 300
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "AirportKiosk": "Debug",
      "System.Speech": "Warning"
    },
    "Console": {
      "Enabled": true
    },
    "File": {
      "Enabled": false,
      "Path": "logs/kiosk.log"
    }
  }
}